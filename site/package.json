{
	"name": "site",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "node ./scripts/sync-content.mjs && vite dev",
		"build:prep": "node ./scripts/sync-content.mjs && node ./scripts/build-content-index.mjs",
		"build": "npm run build:prep && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-netlify": "^5.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"fast-glob": "^3.3.2",
		"gray-matter": "^4.0.3",
		"mdsvex": "^0.12.3",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	}
}
